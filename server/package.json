{
  "name": "weatherforecat-server",
  "description": "The Weather Forecat - GraphQL Server",
  "version": "0.0.1",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "dotenv webpack --mode production",
    "start": "dotenv webpack-dev-server --mode development --open",
    "lint": "eslint --cache --format codeframe --ext mjs,js src",
    "lint:fix": "yarn lint --fix",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn lint:fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@neutrinojs/airbnb-base": "^9.0.0-rc.3",
    "@neutrinojs/jest": "^9.0.0-rc.3",
    "dotenv-cli": "^2.0.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^5.0.0",
    "eslint-plugin-import": "^2.17.3",
    "husky": "^2.4.1",
    "lint-staged": "^8.2.1",
    "neutrino": "^9.0.0-rc.3",
    "prettier": "^1.18.2",
    "webpack": "^4.34.0",
    "webpack-cli": "^3.3.4",
    "webpack-dev-server": "^3.7.1"
  },
  "dependencies": {
    "apollo-server": "^2.6.3",
    "dotenv": "^8.0.0",
    "graphql": "^14.3.1"
  }
}
